@using AlloyAdvanced.Models.NorthwindEntities
@model AlloyAdvanced.Models.ViewModels.NorthwindPageViewModel
<h2>@Model.Category.CategoryName</h2>
<div>
    @Model.Category.Description
</div>
<table class="table table-striped">
    <tr><th>Product Name</th><th>Unit Price</th></tr>
    @foreach (Product p in Model.Category.Products)
    {
        <tr><td>@p.ProductName</td><td>@p.UnitPrice.Value.ToString("$0.00")</td></tr>
    }
</table>
